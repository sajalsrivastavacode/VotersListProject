@{
    ViewData["Title"] = "Search User";
}

<div class="container-fluid vh-100 d-flex align-items-center justify-content-center"
     style="background: linear-gradient(135deg, #1e3c72, #2a5298);">

    <div class="card shadow-lg border-0 rounded-4 p-4"
         style="width: 500px;">

        <div class="text-center mb-4">
            <i class="bi bi-person-search text-primary" style="font-size: 50px;"></i>
            <h3 class="mt-3">Search Your Details</h3>
            <p class="text-muted">Enter your registered email to view your profile</p>
        </div>

        <form asp-controller="Voters"
              asp-action="SearchUser"
              method="post">

            <div class="mb-3">
                <label class="form-label fw-bold">Email Address</label>
                <input type="email"
                       name="email"
                       class="form-control form-control-lg rounded-3"
                       placeholder="example@gmail.com"
                       required />
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger text-center">
                    @ViewBag.Error
                </div>
            }

            <div class="d-grid mt-4">
                <input type="submit" value=" Search" class="btn btn-primary rounded-3" />
                <br />

                <a asp-controller="Voters" asp-action="Login"  class="btn btn-secondary  rounded-3" >Logout</a>


               
            </div>

        </form>

    </div>

</div>
