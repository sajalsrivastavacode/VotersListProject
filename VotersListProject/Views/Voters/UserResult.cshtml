@model VotersListProject.Models.VoterModel

@{
    ViewData["Title"] = "User Details";
}

<div class="container mt-5">

    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card shadow-lg border-0 rounded-4">

                <!-- Header -->
                <div class="card-header bg-success text-white rounded-top-4 d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="bi bi-person-circle me-2"></i> User Details
                    </h4>

                    <span class="badge bg-light text-dark px-3 py-2">
                        @Model.Role
                    </span>
                </div>

                <!-- Body -->
                <div class="card-body p-4">

                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold">Full Name</div>
                        <div class="col-sm-8">@Model.VoterName</div>
                    </div>

                    <hr />

                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold">Email Address</div>
                        <div class="col-sm-8">@Model.Email</div>
                    </div>

                    <hr />

                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold">Voter ID</div>
                        <div class="col-sm-8">@Model.VoterId</div>
                    </div>

                    <hr />

                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold">Role</div>
                        <div class="col-sm-8">@Model.Role</div>
                    </div>

                </div>

                <!-- Footer -->
                <div class="card-footer bg-white text-end rounded-bottom-4">

                    <!-- Back Button -->
                    <a asp-controller="Voters"
                       asp-action="SearchUser"
                       class="btn btn-outline-secondary rounded-pill me-2">
                        <i class="bi bi-arrow-left"></i> Back
                    </a>

                    <!-- Admin Edit Button -->
                    @if (Context.Session.GetString("UserRole") == "Admin")
                    {
                        <a asp-controller="DataShow"
                           asp-action="Edit"
                           asp-route-id="@Model.Id"
                           class="btn btn-warning rounded-pill">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                    }

                    <!-- User Request Button -->
                    @if (Context.Session.GetString("UserRole") == "User")
                    {
                        <a asp-controller="Voters"
                           asp-action="RequestUpdate"
                           class="btn btn-primary rounded-pill">
                            Request Change
                        </a>
                    }

                </div>

            </div>

        </div>
    </div>

</div>
