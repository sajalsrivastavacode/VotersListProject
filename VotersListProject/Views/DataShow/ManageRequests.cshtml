@model List<VotersListProject.Models.UpdateRequest>

@{
    ViewData["Title"] = "Manage Update Requests";
}

<div class="container mt-5">

    <div class="card shadow-lg border-0 rounded-4">

        <div class="card-header bg-dark text-white rounded-top-4">
            <h4 class="mb-0">
                <i class="bi bi-bell-fill me-2"></i>
                Pending Update Requests
            </h4>
        </div>

        <div class="card-body p-4">

            <table class="table table-striped table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>User ID</th>
                        <th>Field</th>
                        <th>New Value</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.UserId</td>
                            <td>@item.RequestedField</td>
                            <td>@item.NewValue</td>
                            <td>
                                <span class="badge bg-warning">
                                    @item.Status
                                </span>
                            </td>
                            <td>
                                <a asp-action="ApproveRequest"
                                   asp-route-id="@item.Id"
                                   class="btn btn-success btn-sm rounded-pill me-2">
                                    Approve
                                </a>

                                <a asp-action="RejectRequest"
                                   asp-route-id="@item.Id"
                                   class="btn btn-danger btn-sm rounded-pill">
                                    Reject
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>

        </div>

        <!-- ✅ ADDED BACK BUTTON (Nothing else changed) -->
        <div class="text-center pb-4">
            <a asp-controller="DataShow"
               asp-action="ShowData"
               class="btn btn-primary rounded-pill">
                ← Back to Dashboard
            </a>
        </div>

    </div>

</div>
